<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <tlbarion translate="label" module="paygate">
                    <label><![CDATA[Barion Payment]]></label>
                    <sort_order>700</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <virtua_tlsoft_instructions translate="label">
                            <label>Instructions</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>62</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </virtua_tlsoft_instructions>
                        <virtua_tlsoft_paymenttype translate="label">
                            <label>Payment type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>virtua_tlsoft_model_paymenttypes</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </virtua_tlsoft_paymenttype>
                        <virtua_tlsoft_reservation_period translate="label">
                            <label>Reservation period</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </virtua_tlsoft_reservation_period>
                        <virtua_tlsoft_token translate="label">
                            <label>Enable token payments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </virtua_tlsoft_token>
                    </fields>
                </tlbarion>
            </groups>
        </payment>
    </sections>
</config>