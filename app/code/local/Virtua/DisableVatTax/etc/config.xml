<?xml version="1.0"?>
<config>
    <modules>
        <Virtua_DisableVatTax>
            <version>1.0.0</version>
        </Virtua_DisableVatTax>
    </modules>

    <frontend>
        <layout>
            <updates>
                <virtua_disablevattax module="Virtua_DisableVatTax">
                    <file>disablevattax.xml</file>
                </virtua_disablevattax>
            </updates>
        </layout>
    </frontend>

    <global>
        <blocks>
            <virtua_disablevattax>
                <class>Virtua_DisableVatTax_Block</class>
            </virtua_disablevattax>
        </blocks>

        <models>
            <virtua_disablevattax>
                <class>Virtua_DisableVatTax_Model</class>
            </virtua_disablevattax>
        </models>

        <helpers>
            <virtua_disablevattax>
                <class>Virtua_DisableVatTax_Helper</class>
            </virtua_disablevattax>
        </helpers>

        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <virtua_disablevattax>
                        <type>singleton</type>
                        <class>Virtua_DisableVatTax_Model_Observer</class>
                        <method>disableVatTaxForQuote</method>
                    </virtua_disablevattax>
                </observers>
            </sales_quote_collect_totals_before>

            <customer_address_save_after>
                <observers>
                    <virtua_disablevattax>
                        <type>singleton</type>
                        <class>Virtua_DisableVatTax_Model_Observer</class>
                        <method>removeShouldDisableVatTaxVariableFromSession</method>
                    </virtua_disablevattax>
                </observers>
            </customer_address_save_after>

            <customer_login>
                <observers>
                    <virtua_disablevattax>
                        <type>singleton</type>
                        <class>Virtua_DisableVatTax_Model_Observer</class>
                        <method>removeShouldDisableVatTaxVariableFromSession</method>
                    </virtua_disablevattax>
                </observers>
            </customer_login>

            <customer_logout>
                <observers>
                    <virtua_disablevattax>
                        <type>singleton</type>
                        <class>Virtua_DisableVatTax_Model_Observer</class>
                        <method>removeShouldDisableVatTaxVariableFromSession</method>
                    </virtua_disablevattax>
                </observers>
            </customer_logout>
        </events>
    </global>
</config>