<?xml version="1.0"?>
<config>
    <sections>
        <zebu_config translate="label" module="zebu_config">
            <groups>
                <zebu_modules translate="label">
                    <fields>
                        <zebu_adminlog translate="label">
                            <label>Activity log</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>Zebu_Config_Block_System_Config_Source_LicenseKey</frontend_model>
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zebu_adminlog>                     
                    </fields>
                </zebu_modules>
            </groups>
        </zebu_config>    
        <zebu_adminlog translate="label" module="adminlog">
            <label>Activity log</label>
            <tab>zebu_config</tab>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <zebu_adminlog_general translate="label">
                    <label>General</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <zebu_adminlog_enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zebu_adminlog_enabled>
                        <clean_after_days translate="label">
                            <label>Clean logs after days</label>
                            <comment>How many days to keep admin action logs. An empty value means to keep logs forever (no cleaning).</comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clean_after_days>
                    </fields>
                </zebu_adminlog_general>
            </groups>
        </zebu_adminlog>
    </sections>
</config>
